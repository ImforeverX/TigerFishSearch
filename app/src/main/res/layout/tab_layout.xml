<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    >

    <RadioGroup
        android:id="@+id/tab_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radiobutton_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/tab_home_selector"
            android:gravity="center"
            android:text="@string/tab_home_text"
            android:textColor="@drawable/tab_x_color"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radiobutton_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_category_selector"
            android:gravity="center"
            android:text="@string/tab_category_text"
            android:textColor="@drawable/tab_x_color"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radiobutton_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_car_selector"
            android:gravity="center"
            android:text="@string/tab_car_text"
            android:textColor="@drawable/tab_x_color"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radiobutton_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_mine_selector"
            android:gravity="center"
            android:text="@string/tab_mine_text"
            android:textColor="@drawable/tab_x_color"
            android:textSize="14sp" />
    </RadioGroup>
</LinearLayout>